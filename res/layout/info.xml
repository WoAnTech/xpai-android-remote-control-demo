<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:orientation="vertical"
android:layout_gravity="right"
>

    <TextView
        android:id="@+id/txt_sdk_ver"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:text="SDK ver:"
        android:textColor="@color/brightGreen"
        android:textSize="12sp" />

<TextView
    android:id="@+id/txt_record_duration"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:text="Duration:"
    android:textColor="@color/white"
    android:textSize="12sp" >

</TextView>

<TextView
    android:id="@+id/txt_frame_rate"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:text="FPS:"
    android:textColor="@color/white"
    android:textSize="12sp" >

</TextView>

<TextView
    android:id="@+id/txt_net_speed"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:text="Net:"
    android:textColor="@color/white"
    android:textSize="12sp" >
</TextView>

<TextView
    android:id="@+id/txt_bytes_sent"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:text="Sent:"
    android:textColor="@color/white"
    android:textSize="12sp" >
</TextView>

<TextView
    android:id="@+id/txt_cache_remain"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:text="Cache:"
    android:textColor="@color/white"
    android:textSize="12sp" >
</TextView>
</LinearLayout>
